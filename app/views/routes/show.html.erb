<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900"><%= t('.route_information') %></h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= t('.route_details') %></p>
  </div>
  <div class="border-t border-gray-200">
     <dl>
  <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <dt class="text-sm font-medium text-gray-500"><%= t(".route_name") %>:</dt>
    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @route.name %></dd>
  </div>
  <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <dt class="text-sm font-medium text-gray-500"><%= t('.stations') %>:</dt> 
    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
      <% @route.stations.each_with_index do |station, i| %>
        <br><%= "#{i+1} - #{station.name}" %> 
      <% end %>
    </dd>
  </div>
  </div>
  <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <%= link_to t("general.back"), :back %>
  </div>
